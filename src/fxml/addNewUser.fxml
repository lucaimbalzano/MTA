   <children>
      <Button id="addMember-btn" fx:id="btnAddMember" layoutX="359.0" layoutY="318.0" mnemonicParsing="false" onAction="#addMemberOnClick" prefHeight="34.0" prefWidth="138.0" stylesheets="@../css/Styling.css" text="Add Member">
